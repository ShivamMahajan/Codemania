<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- explicit list view definition -->
   
    <record model="ir.ui.view" id="engineer.list">
      <field name="name">Engineer list</field>
      <field name="model">engineer.engineer</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
 

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="engineer.action_window">
      <field name="name">Engineer window</field>
      <field name="res_model">engineer.engineer</field>
      <field name="view_mode">tree,form</field>
    </record>
  
    <!-- Top menu item -->
    <menuitem name="Engineer" id="engineer.menu_root"/>
 
    <!-- menu categories -->
    <!-- actions -->
    <menuitem name="List" id="engineer.menu_1_list" parent="engineer.menu_1"
              action="engineer.action_window"/>

 <!-- Multiple Views -->
<!-- Tree View -->
<record model="ir.ui.view" id="new.list">
      <field name="name">New list</field>
      <field name="model">new.new</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="dob"/>
          <field name="country"/>
          <field name="java"/>
          <field name="python"/>
          <field name="bio"/>
          <field name="image"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="new.form">
      <field name="name">New lForm</field>
      <field name="model">new.new</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
          <group><field name="name"/></group>
          <group><field name="dob"/></group>
          <group><field name="country"/></group>
          <group><field name="java"/></group><group><field name="python"/></group>
          <group><field name="bio"/></group>
          <group><field name="image"/></group>
        </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="new.action_window">
      <field name="name">My First Window</field>
      <field name="res_model">new.new</field>
      <field name="view_mode">tree,form</field>
    </record>


 <!-- Multiple Views -->
      <record model="ir.actions.act_window.view" id="action_tree">
            <field name="sequence" eval="2"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="new.list"/>
            <field name="act_window_id" ref="new.action_window"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_form">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="new.form"/>
            <field name="act_window_id" ref="new.action_window"/>
        </record>


nolabel='1' Doesnt display the field name (object name which will be shown by default
widget="radio" 
</data>
</openerp>

<!--Search View-->

  <record id="view_task_search_form" model="ir.ui.view">
            <field name="name">project.task.search.form</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
               <search string="Tasks">
               <!--   Fields to be viewed in the seacrh box to enable filter  -->
                    <field name="name" string="Tasks"/>
                   <!--  Filter with conditions -->
                     <filter string="New" name="draft" domain="[('stage_id.sequence', '&lt;=', 1)]"/>

                      <separator/> for giving spaces
                      <!-- Group By -->
                       <group expand="0" string="Group By">
                        <filter string="Project" name="project" context="{'group_by':'project_id'}"/>
                         <filter string="Assignation Month" context="{'group_by':'date_start:month'}" help="Creation Date"/>
                         <filter string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
